@model List<Kursach3.WebUI.Models.UserIndexModel>
@{
    ViewBag.Title = "UsersIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <h3>Список пользователей @Html.ActionLink("Главная", "List", "Test", null, new { @class = "btn btn-default btn-lg" })</h3>
<div class="panel-body">
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th>Почта</th>
            <th class="text-right">Имя</th>
            <th class="text-right">Роль</th>
            <th class="text-center">Действия</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Email </td>
                <td class="text-right">@item.Name</td>
                <td class="text-right">@item.Role</td>
                <td class="text-center" style="width:150px">
                    @Html.ActionLink("Изменить", "EditByAdmin", new { item.Id }, new { @class = "btn btn-block btn-default btn-lg" })

                    @Html.ActionLink("Сделать администратором", "AddAdminRole", new { item.Id }, new { @class = "btn btn-block btn-default btn-lg" })

                    @Html.ActionLink("Сделать пользователем", "RemoveAdminRole", new { item.Id }, new { @class = "btn btn-block btn-default btn-lg" })

                    @Html.ActionLink("Заблокировать", "BlockUser", new { item.Id }, new { @class = "btn btn-block btn-default btn-lg" })
                    
                    @Html.ActionLink("Удалить", "DeleteByAdmin", new { item.Id }, new { @class = "btn btn-block btn-danger btn-lg" })
                </td>
            </tr>
        }
    </table>
</div>


