@using Kursach3.WebUI.Models
@model AdminIndexViewModel

@{
    ViewBag.Title = "Админ панель: тесты";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int Delete = 1;
}
    <h3>
        Список тестов @Html.ActionLink("Главная", "Index", "Default", null, new { @class = "btn btn-default btn-lg" })
        @Html.ActionLink("Добавить тест", "Create", null, new { @class = "btn btn-default btn-lg" })
    </h3>
<div class="panel-body">
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th class="text-right">ID</th>
            <th>Название</th>
            <th class="text-right">Класс или год</th>
            <th class="text-right">ЗНО формат</th>
            <th class="text-right">Колличество вопросов</th>
            <th class="text-right">Колличество баллов</th>
            <th class="text-center">Действия</th>
        </tr>
        @foreach (var item in Model.Tests)
        {
            int x = item.Id;
    <tr>
        <td class="text-right">@item.Id</td>
        <td> @item.Theme</td>
        <td class="text-right">@item.Course.ToString("#")</td>
        <td class="text-right"> @item.ZNO</td>
        <td class="text-right"> @item.NumOfQ</td>
        <td class="text-right"> @item.MaxScore</td>
        <td class="text-center" style="width:150px">
            @Html.ActionLink("Изменить", "Edit", new { item.Id }, new { @class = "btn btn-block btn-default btn-lg" })
            @Html.ActionLink("Добавить картинку", "SetPicIndex", new { item.Id }, new { @class = "btn btn-default btn-lg" })
            @Html.ActionLink("Вопросы", "QuestionIndex", new { item.Id }, new { @class = "btn btn-block btn-default btn-lg" })
            @Html.ActionLink("Удалить", "Edit", new { item.Id, Delete }, new { @class = "btn btn-block btn-danger btn-lg" })
        </td>
    </tr>
        }
    </table>
</div>







