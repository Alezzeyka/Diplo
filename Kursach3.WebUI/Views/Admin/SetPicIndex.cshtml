@model Kursach3.WebUI.Models.SetPicIndexModel

@{
    ViewBag.Title = "PicIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int Delete = 1;
}
<h3>
    Список изображений @Html.ActionLink("Главная", "List", "Test", null, new { @class = "btn btn-default btn-lg" })
</h3>
<div class="panel-body">
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th class="text-right">ID</th>
            <th>Название</th>
            <th class="text-right">Изображение</th>
            <th class="text-center">Действия</th>
        </tr>
        @foreach (var item in Model.Pictures)
        {
            <tr>
                <td class="text-right">@item.Id</td>
                <td>@item.Name</td>
                <td class="text-right"><div class="img-thumbnail">@Html.Raw("<img style='width:150px; height:250px;' src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.Image) + "\"/>")</div></td>
                <td class="text-center" style="width:150px">
                    @Html.ActionLink("Выбрать", "SetPic", new { Model.TestId, item.Id }, new { @class = "btn btn-block btn-default btn-lg" })
                </td>
            </tr>
        }
    </table>
</div>

