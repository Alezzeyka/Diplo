@model Kursach3.WebUI.Models.FilePicIndexViewModel

@{
    ViewBag.Title = "PicIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int Delete = 1;
}
<h3>
    Список изображений @Html.ActionLink("Главная", "List", "Test", null, new { @class = "btn btn-default btn-lg" })
</h3>
<div class="panel-body">
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th class="text-right">ID</th>
            <th>Название</th>
            <th class="text-right">Тип</th>
            <th class="text-center">Действия</th>
        </tr>
        @foreach (var item in Model.Files)
        {
            <tr>
                <td class="text-right">@item.Id</td>
                <td>@item.FileName</td>
                <td class="text-right">@item.FileType</td>
                <td class="text-center" style="width:150px">
                    @Html.ActionLink("Выбрать", "SetVideo", new { Model.ChapterId, item.Id }, new { @class = "btn btn-block btn-default btn-lg" })
                </td>
            </tr>
        }
    </table>
</div>

