@model IEnumerable<Kursach3Domain.Entities.Files>
@{
    ViewBag.Title = "FileIndex";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h3>
    Список тестов @Html.ActionLink("Главная", "Index", "Default", null, new { @class = "btn btn-default btn-lg" })
    @Html.ActionLink("Добавить файл", "Upload", null, new { @class = "btn btn-default btn-lg" })
</h3>
<div class="panel-body">
    <table class="table table-striped table-condensed table-bordered">
        <tr>
            <th class="text-right">ID</th>
            <th>Название</th>
            <th class="text-right">Путь</th>
            <th class="text-right">Расширение</th>
            <th class="text-center">Действия</th>
        </tr>
        @foreach (var item in Model)
        {
            int x = item.Id;
            <tr>
                <td class="text-right">@item.Id</td>
                <td> @item.FileName</td>
                <td class="text-right">@item.FilePath</td>
                <td class="text-right"> @item.FileType</td>
                <td class="text-center" style="width:150px">
                    @Html.ActionLink("Удалить", "DeleteFile", new {item.Id}, new { @class = "btn btn-block btn-danger btn-lg" })
                </td>
            </tr>
        }
    </table>
</div>

