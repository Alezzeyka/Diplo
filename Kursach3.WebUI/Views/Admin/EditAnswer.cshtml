
@model Kursach3Domain.Entities.Answers
@{
    ViewBag.Title = "Админ панель: редактирование теста";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="panel">
        <div class="panel-heading">
            <h3>Редактирование ответа</h3>
        </div>

        @using (Html.BeginForm("EditAnswer", "Admin", FormMethod.Post))
        {
            @Html.ValidationSummary();
    <div class="panel-body btn-group-toggle">
        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.QuestionID)
        @Html.HiddenFor(m=>m.ImgId)
        @Html.HiddenFor(m=>m.LineAnswer)
        @foreach (var property in ViewData.ModelMetadata.Properties)
        {
            switch (property.PropertyName)
            {
                case "Id":
                case "ImgId":
                case "QuestionID":
                case "LineAnswer":
                    // Ничего не делать
                    break;
                default:
                    <div class="form-group">
                        <label>@(property.DisplayName ?? property.PropertyName)</label>
                        @if (property.PropertyName == "IsCorrect")
                        {
                            
                            @Html.CheckBoxFor(m=>m.IsCorrect,new { @class="btn btn-secondary active"})
                            
                        }
                        else
                        {
                            @Html.TextBox(property.PropertyName, null,
                                new { @class = "form-control" })
                        }
                        @Html.ValidationMessage(property.PropertyName)
                    </div>
                    break;
            }
        }
    </div>
    <div class="panel-footer">
        <input type="submit" value="Сохранить" class="btn btn-primary btn-lg" />
        @if (Model.LineAnswer == false)
        {
            @Html.ActionLink("Отменить изменения и вернуться к списку", "AnswerIndex", new { ID = Model.QuestionID, LineId=0 }, new { @class = "btn btn-warning btn-lg" })
        }
        else
        {
            @Html.ActionLink("Отменить изменения и вернуться к списку", "AnswerIndex", new { Id = 0 , LineID = Model.QuestionID }, new { @class = "btn btn-warning btn-lg" })
        }
    </div>
         }
    </div>
            


            
