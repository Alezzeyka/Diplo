<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <title></title>
</head>
<body>
    <div class="navbar navbar-inverse" role="navigation" style="margin-bottom:0px">
        <a class="navbar-brand" href="/">
            <span class="hidden-xs">CyberTest - онлайн тести</span>

            <div class="visible-xs">Cyber</div>
            <div class="visible-xs">Tests</div>
        </a>
    </div>
    @if (User.IsInRole("admin") == true)
    {
        @Html.ActionLink("Адмін-частина", "Index", "Admin", null,
                new { @class = "btn btn-primary btn-block btn-lg" })
    }
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger">@TempData["error"]</div>
    }
    <div class="col-xs-10 col-sm-12" style="margin-top:20px">

        @RenderBody()
    </div>
    <div class="navbar navbar-fixed-bottom">
        <div class="panel-footer">
            <div class="container">
                <p class="navbar-text pull-right">
                    © Alex Sh. @DateTime.Now.Year.ToString()
                </p>
            </div>
        </div>
    </div>
</body>
</html>
